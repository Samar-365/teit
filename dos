#include <stdio.h>
#include <string.h>

#define PASSWORD "thecorrectpaswd"
#define BUFF_SIZE 15

int main(void) {
    char buff[BUFF_SIZE];
    int pass = 0;

    printf("\n Enter the password: \n");

    // âœ… SAFE: Use fgets() to limit input to BUFF_SIZE - 1 characters.
    // We use stdin as the source.
    if (fgets(buff, BUFF_SIZE, stdin) == NULL) {
        printf("Error reading input.\n");
        return 1;
    }

  
    buff[strcspn(buff, "\n")] = 0;

    if (strcmp(buff, PASSWORD) == 0) { // strcmp returns 0 if strings are equal
        printf("\n Correct Password \n");
        pass = 1;
    } else {
        printf("\n Wrong Password \n");
    }

    if (pass) {
        printf("\n Root privileges given to the user: \n");
    }

    return 0;
}
