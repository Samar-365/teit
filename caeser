# Caesar Cipher using Substitution Technique

def caesar_cipher(text, shift):
    result = ""
    
    for char in text:
        # Encrypt uppercase letters
        if char.isupper():
            result += chr((ord(char) - 65 + shift) % 26 + 65)
        # Encrypt lowercase letters
        elif char.islower():
            result += chr((ord(char) - 97 + shift) % 26 + 97)
        # Keep other characters unchanged (like spaces, punctuation)
        else:
            result += char
    return result


# Take input from user
plaintext = input("Enter the plaintext: ")
shift = int(input("Enter shift value (1-25): "))

# Encrypt the plaintext
ciphertext = caesar_cipher(plaintext, shift)
print("\nEncrypted text (Ciphertext):", ciphertext)

# Decrypt back using negative shift
decrypted_text = caesar_cipher(ciphertext, -shift)
print("Decrypted text (Plaintext):", decrypted_text)